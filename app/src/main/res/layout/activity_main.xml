<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guess_number_instruction"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <!-- User Input for Guess -->
    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_guess"
        android:inputType="number"
        android:autofillHints="username"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <!-- Submit Guess Button -->
    <Button
        android:id="@+id/guessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_guess"
        android:layout_marginBottom="16dp" />

    <!-- Result Text -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Attempts Text -->
    <TextView
        android:id="@+id/attemptsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attempts_default"
        android:textSize="16sp" />

    <!-- Play Again Button (hidden by default) -->
    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_again"
        android:visibility="gone"
        android:layout_marginTop="20dp" />

</LinearLayout>